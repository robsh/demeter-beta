<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="clearLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Login</h4>
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control email-input" id="exampleInputEmail1" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control password-input" id="exampleInputPassword1" placeholder="Password">
          </div>
        </form>

        <div class="row">
        <a class="btn btn-lg btn-primary" href="#facebook-login">
          <i class="fa fa-facebook-square fa-2x pull-left"></i><span style="vertical-align:sub">Login with Facebook</span>
        </a>
        </div>

        <br/>
        <p>Not signed up? <a class="transfer-modal-login" href="#">Sign up now.</a></p>
        <p class="flash"></p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" id="login" class="btn login-submit-button btn-primary">Login</button>
      </div>
    </div>
  </div>
</div>

